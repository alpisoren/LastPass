
@{
    ViewBag.Title = "Index";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Kullanıcı Girişi</title>

     Bootstrap CSS 
    <link href="/Content/LoginLayout/css/bootstrap.min.css" rel="stylesheet">
     bootstrap theme 
    <link href="/Content/LoginLayout/css/bootstrap-theme.css" rel="stylesheet">
    external css
     font icon 
    <link href="/Content/LoginLayout/css/elegant-icons-style.css" rel="stylesheet" />
    <link href="/Content/LoginLayout/css/font-awesome.css" rel="stylesheet" />
     Custom styles 
    <link href="/Content/LoginLayout/css/style.css" rel="stylesheet">
    <link href="/Content/LoginLayout/css/style-responsive.css" rel="stylesheet" />

</head>
<body>
    <div>
        <form class="login-form" method="post" action="/User/Login">
            <div class="login-wrap">
                @if (Session["Id"] == null)
                {
                    <p class="alert">
                        @ViewBag.Uyari
                    </p>
                }

                <p class="login-img"><i class="icon_lock_alt"></i></p>
                <div class="input-group">
                    <span class="input-group-addon"><i class="icon_profile"></i></span>
                    <input type="text" class="form-control" name="UserName" placeholder="Kullanıcı Adı" autofocus>
                </div>
                <div class="input-group">
                    <span class="input-group-addon"><i class="icon_key_alt"></i></span>
                    <input type="password" name="Password" class="form-control" placeholder="Şifre">
                </div>

                <button class="btn btn-primary btn-lg btn-block" type="submit">Giriş Yap</button>
                <a class="btn btn-info btn-lg btn-block" href="/User/SignUp/">Kayıt Ol</a>
                @*<a class="btn btn-primary btn-lg btn-block" style="color:white" href="/User/ResetPassword/">Şifremi Unuttum</a>*@
            </div>
        </form>


    </div>
</body>
</html>
